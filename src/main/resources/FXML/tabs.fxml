                                                      <!--                                         <VBox.margin>-->
                                                      <!--                                             <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />-->
                                                      <!--                                         </VBox.margin>-->
                                                      <!--                                     </Button>-->
                                                      <Button fx:id="addVideo" mnemonicParsing="false" onAction="#addVideoToEditor" prefHeight="50.0" prefWidth="200.0" text="Replace Video">
                                             <HBox.margin>
                                                <Insets left="30.0" />
                                             </HBox.margin>
                                          </Button>
                                       </children>
                                    </HBox>
                                    <HBox prefHeight="50.0" prefWidth="200.0">
                                       <children>
                                                      <Button fx:id="pageSettings" mnemonicParsing="false" onAction="#pageSettingsButtonAction" prefHeight="50.0" prefWidth="200.0" text="Page Settings" />
                                          <Button fx:id="showHideScript" mnemonicParsing="false" onAction="#showOrHideScript" prefHeight="50.0" prefWidth="200.0" text="Hide Script">
                                             <HBox.margin>
                                                <Insets left="30.0" />
                                             </HBox.margin>
                                          </Button>
                                       </children>
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </HBox>
                                    <HBox prefHeight="50.0" prefWidth="200.0">
                                       <children>
                                                      <Button mnemonicParsing="false" onAction="#addInputFieldToEditor" prefHeight="50.0" prefWidth="200.0" text="Add Input Field" />
                                                      <Button mnemonicParsing="false" onAction="#addImageInputField" prefHeight="50.0" prefWidth="200.0" text="Add Image Input Field ">
                                             <HBox.margin>
                                                <Insets left="30.0" />
                                             </HBox.margin>
                                                      </Button>
                                       </children>
                                       <VBox.margin>
                                          <Insets top="10.0" />
                                       </VBox.margin>
                                    </HBox>


                                                <Button fx:id="format" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#changeFormat" prefHeight="50.0" prefWidth="177.0" text="Change Font Size">
                                       <VBox.margin>
